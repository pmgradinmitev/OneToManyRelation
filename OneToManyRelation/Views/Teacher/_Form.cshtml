@model TeacherViewModel

<h2>@(Model.TeacherId != null ? $"Промени учител: {Model.Name}" : "Добави учител")</h2>

<form asp-controller="Teacher" asp-action="@(Model.TeacherId != null ? "Update" : "Create")" method="post">
    <input type="hidden" asp-for="TeacherId" />

    <div class="row mb-3 p-1">
        <label asp-for="Name" class="p-0"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="row mb-3 p-1">
        <label asp-for="Subject" class="p-0"></label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="row justify-content-center">
        <div class="col-4">
            <button type="submit" class="btn btn-primary form-control">@(Model.TeacherId != null ? "Редактирай" : "Добави")</button>
        </div>
        <div class="col-4">
            <a asp-controller="Teacher" asp-action="Index" class="btn btn-outline-secondary form-control">Към списъка</a>
        </div>
    </div>
</form>
